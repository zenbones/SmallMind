<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="rabbitMQConnectorFactory" class="org.smallmind.phalanx.wire.transport.amqp.rabbitmq.spring.RabbitMQConnectorFactoryBean">
    <property name="username" value="${rabbitmq.username}"/>
    <property name="password" value="${rabbitmq.password}"/>
    <property name="heartbeatSeconds" value="5"/>
  </bean>

  <bean id="nameConfiguration" class="org.smallmind.phalanx.wire.transport.amqp.rabbitmq.NameConfiguration"/>

  <bean id="jsonSignalCodec" class="org.smallmind.phalanx.wire.signal.JsonSignalCodec">
    <property name="verbose" value="true"/>
    <property name="verboseLogLevel" value="DEBUG"/>
  </bean>

  <bean id="rabbitmqRequestTransport" class="org.smallmind.phalanx.wire.transport.amqp.rabbitmq.RabbitMQRequestTransport" destroy-method="close">
    <constructor-arg index="0" name="rabbitMQConnector" ref="rabbitMQConnectorFactory"/>
    <constructor-arg index="1" name="ephemeralQueueContractor">
      <bean class="org.smallmind.phalanx.wire.transport.amqp.rabbitmq.ClassicQueueContractor"/>
    </constructor-arg>
    <constructor-arg index="2" name="nameConfiguration" ref="nameConfiguration"/>
    <constructor-arg index="3" name="signalCodec" ref="jsonSignalCodec"/>
    <constructor-arg index="4" name="clusterSize" value="${wire.cluster_size}"/>
    <constructor-arg index="5" name="concurrencyLimit" value="${wire.concurrency_limit}"/>
    <constructor-arg index="6" name="defaultTimeoutSeconds" value="${wire.default_timeout_seconds}"/>
    <constructor-arg index="7" name="messageTTLSeconds" value="${wire.message_ttl_seconds}"/>
    <constructor-arg index="8" name="autoAcknowledge" value="false"/>
    <constructor-arg index="9" name="publisherConfirmationHandler">
      <null/>
    </constructor-arg>
  </bean>

  <bean id="rabbitmqResponseTransport" class="org.smallmind.phalanx.wire.transport.amqp.rabbitmq.RabbitMQResponseTransport" destroy-method="close">
    <constructor-arg index="0" name="rabbitMQConnector" ref="rabbitMQConnectorFactory"/>
    <constructor-arg index="1" name="enduringQueueContractor">
      <bean class="org.smallmind.phalanx.wire.transport.amqp.rabbitmq.ClassicQueueContractor"/>
    </constructor-arg>
    <constructor-arg index="2" name="ephemeralQueueContractor">
      <bean class="org.smallmind.phalanx.wire.transport.amqp.rabbitmq.ClassicQueueContractor"/>
    </constructor-arg>
    <constructor-arg index="3" name="nameConfiguration" ref="nameConfiguration"/>
    <constructor-arg index="4" name="workerClass" value="org.smallmind.phalanx.wire.transport.amqp.rabbitmq.InvocationWorker"/>
    <constructor-arg index="5" name="signalCodec" ref="jsonSignalCodec"/>
    <constructor-arg index="6" name="serviceGroup" value="default"/>
    <constructor-arg index="7" name="clusterSize" value="${wire.cluster_size}"/>
    <constructor-arg index="8" name="concurrencyLimit" value="${wire.concurrency_limit}"/>
    <constructor-arg index="9" name="messageTTLSeconds" value="${wire.message_ttl_seconds}"/>
    <constructor-arg index="10" name="autoAcknowledge" value="false"/>
    <constructor-arg index="11" name="publisherConfirmationHandler">
      <null/>
    </constructor-arg>
  </bean>
</beans>
